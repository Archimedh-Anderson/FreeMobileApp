# Gemini API Configuration
# Obtenez votre cl√© sur: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# Model Settings
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.15
GEMINI_MAX_TOKENS=8192

# Mistral/Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
MISTRAL_MODEL=mistral

# BERT Configuration
BERT_MODEL=nlptown/bert-base-multilingual-uncased-sentiment
USE_GPU=true

# Processing Configuration
BATCH_SIZE=20
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2

# Quality Thresholds
MIN_CONFIDENCE_THRESHOLD=0.5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ENVIRONMENT=development
DEBUG=false

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Backend API (if used)
BACKEND_URL=http://localhost:8000

# Database (if used)
DATABASE_URL=sqlite:///data/freemobilachat.db

# Authentication
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256

